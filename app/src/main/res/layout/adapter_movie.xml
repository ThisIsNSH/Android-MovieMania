<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:scaleType="centerCrop"
            android:src="@drawable/sample"
            android:transitionName="@string/trans1" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pic"
            android:layout_margin="8dp"
            android:fontFamily="@font/psb"
            android:maxLines="2"
            android:minLines="2"
            android:text="Jurassic World: Fallen Kingdom"
            android:textColor="#000"
            android:textSize="18sp"
            android:transitionName="@string/trans2" />

        <TextView
            android:id="@+id/release"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="-8dp"
            android:fontFamily="@font/ps"
            android:text="2018"
            android:textSize="17sp"
            android:transitionName="@string/trans3"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.CardView>